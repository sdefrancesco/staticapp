	<script>
	 

	$(document).ready(function() {

    if ($(window).width() < 600 ) {
      $('.navbar-default').css('background-color','#262626');
    }
    
    else {
    $('.navbar-default').css('background-color', 'transparent');
    $('.navbar-default').css('border', 'none');  
    $('.adminbottom').css('opacity', '0');
    
    };

		
    
    
  
  $(".adminclosebtn").click(function() {
     $(".admintop").addClass('animated bounceOutUp');
     $(".navbar-default").css('top', '0px');
  });

  

  $(".fa-star").click(function() {
    $('.admintop').removeClass('animated bounceOutUp');
    $(".admintop").addClass('animated bounceInDown');
    $(".navbar-default").css('top', '30px');

  });
		
		$(document).scroll(function() {
  			if ($(document).scrollTop() > 50) {
    // user scrolled 50 pixels or more;
    // do stuff
    		$('.adminbottom').addClass('animated slideInUp');
    		
        $('.navbar-default').css('background-color', '#262626');
    		$('.navbar-default').css('-webkit-box-shadow', '1px 2px 5px 3px rgba(0,0,0,0.18)');
        $('.adminbottom').css('opacity', '1');

        
  			} else {

          

          $('.adminbottom').css('opacity', '0');
    			$('.navbar-default').css('background-color', 'transparent');
    			$('.navbar-default').css('-webkit-box-shadow', '0px 0px 0px 0px rgba(0,0,0,0.00)');
    			
  };
});
	});
</script>
