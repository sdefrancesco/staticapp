          		<li><a><i class=" fa fa-envelope" style="color:#27E1CE;"></i></a></li>
          		<li><a><i class="fa fa-globe" style="color:#27E1CE;"></i></a></li>

        		
        		<li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                <% if current_user.try(:admin?) %>
                   <i class="fa fa-diamond" style="color: #9227E1;"></i>
                <% else %>
                  <i class="fa fa-user" style="color: #27E1CE; margin-right:5px;"></i>
                <% end %>
                  <%= current_user.email %> <span class="caret"></span>
                
                </a>
                <ul class="dropdown-menu">
                  <li><%= link_to 'Profile', current_user %></li>
                  <li><a href="#">Another action</a></li>
                  <li><a href="#">Something else here</a></li>
                  <li role="separator" class="divider"></li>
                  <li class="dropdown-header">Your Account </li>
                  
                  <li><%= link_to '<i class="fa fa-sign-out"></i> Sign Out'.html_safe, destroy_user_session_path, :method => :delete %></li>
                  <li><%= link_to '<i class="fa fa-gears"></i> Settings'.html_safe, edit_user_registration_path%></li>
                </ul>
              </li>
          <% else %>
            <li><%= link_to 'Sign In', new_user_session_path %></li>
            <li>
            	
            	<%= link_to 'Sign Up<i class="fa fa-arrow-right"></i>'.html_safe, new_user_registration_path, :class => 'btn btn-primary btn-outline with-arrow btn-sm', :style => 'font-size: 12px; font-family:montserrat, sans-serif; height:auto; padding-bottom:5px; padding-top:5px; margin-top:10px;' %>
  					
				
            	
            </li>
            
            <% end %>
            
          </ul>
        </div><!--/.nav-collapse -->
      </div>
    </nav>

<%= yield %>




