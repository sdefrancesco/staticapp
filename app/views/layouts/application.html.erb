<!DOCTYPE html>
<html>
<head>
  <title>Staticapp</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>

  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <link href='https://fonts.googleapis.com/css?family=Roboto:100,300,500|Montserrat:400,700' rel='stylesheet' type='text/css'>
  <link href='https://fonts.googleapis.com/css?family=Raleway:400,100,200,300,500,600' rel='stylesheet' type='text/css'>
</head>
<body>

<% if current_user.try(:admin?) %>
  
  <nav class="admintop" style=" -webkit-box-shadow: 1px 2px 5px 3px rgba(0,0,0,0.18);padding-top:5px; padding-bottom:5px;top:0px;width:100%; background-color:#27E1CE;position:fixed; z-index:999; height:auto;">
      <div class="container">
        <h6 style="color:white;"class="h6class"><i style="margin-right:5px;"class="fa fa-diamond"></i>POST Card Co Admin<i style="float:right" class="adminclosebtn fa fa-close"></i></h6>

      </div> 
    </nav>
  
  <!-- bottom admin footer -->
    <nav class="adminbottom" style=" padding-top:5px; padding-bottom:5px;bottom:0px;width:100%; background: rgba(255,77,252, 1);
    background: -moz-linear-gradient(45deg, rgba(255,77,252,0.1) 0%, rgba(177,96,235,1) 100%);
    background: -webkit-gradient(left bottom, right top, color-stop(0%, rgba(255,77,252,1)), color-stop(100%, rgba(177,96,235,0.61)));
    background: -webkit-linear-gradient(45deg, rgba(255,77,252,1) 0%, rgba(177,96,235,1) 100%);
    background: -o-linear-gradient(45deg, rgba(255,77,252,1) 0%, rgba(177,96,235,0.1) 100%);
    background: -ms-linear-gradient(45deg, rgba(255,77,252,1) 0%, rgba(177,96,235,0.1) 100%);
    background: linear-gradient(45deg, rgba(255,77,252,1) 0%, rgba(177,96,235,0.1) 100%);;position:fixed; z-index:999; height:auto;">
      <div class="container">
        <h6 style="color:white;"class="h6class"><i style="margin-right:5px;"class="fa fa-star"></i>You Are Signed In As An Admin</h6>

      </div> 
    </nav>
  <!-- end bottom admin footer -->

<% end %>

<!-- end admin if statemtn -->


<% if notice %>
  <div id="notice" class="notice text-center" style="padding-top:50px; padding-bottom:50px;z-index:9999;background-color:rgba(0, 0, 0, 0.82);  width:100%; height:auto; ">
    <h1><i class="fa fa-rocket animated zoomInLeft" style="color:#27e1ce;"></i></h1>
    <h2 style="color:white; font-family:'raleway', sans-serif; font-weight:100;"><%= notice %></h2>
  </div>
<% end %>
<% if alert %>
  <div id="alert" class="alert text-center" style="margin-bottom:0px;padding-top:50px; padding-bottom:50px;z-index:9999;background-color:rgba(0, 0, 0, 0.82);  width:100%; height:auto;">
    <h1><i class="fa fa-close" style="color:#27e1ce;"></i></h1>
    <h2 style="color:white; font-family:'raleway', sans-serif; font-weight:100;"><%= alert %></h2>
  </div>
<% end %>

<% if current_user.try(:admin?) %>
  <nav class="navbar navbar-default navbar-fixed-top" style="top:30px;font-size:12px; font-family:'montserrat', sans-serif; font-weight:100; color:white;">
<% else %>
<nav class="navbar navbar-default navbar-fixed-top" style="font-size:12px; font-family:'montserrat', sans-serif; font-weight:100; color:white;">
<% end %>
      <div class="container">
        <div class="navbar-header" style="color:white;" >
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <%= link_to 'POST Card Co', root_path, :class => 'navbar-brand', :style => 'color:white' %>
        </div>
        <div id="navbar" class="navbar-collapse collapse">
          <ul class="nav navbar-nav hovercolor">
            <% if user_signed_in? %>
              <li><%= link_to 'About', about_path %></li>
              <li><%= link_to 'Contact', contact_path %></li>
              <li><%= link_to 'Explore', posts_path %></li>
              <li><%= link_to 'Create', new_post_path %></li>
            <% else %>
              <li><%= link_to 'About', about_path %></li>
              <li><%= link_to 'Contact', contact_path %></li>
              <li><%= link_to 'Careers', careers_path %></li>
            <% end %>
          </ul>
          <ul class="nav navbar-nav navbar-right">
          <% if user_signed_in? %>
