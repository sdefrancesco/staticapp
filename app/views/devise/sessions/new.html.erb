<div class="container">
<div style="max-width:500px; margin-left:auto; margin-right:auto; padding-top:100px; padding-bottom:50px;">
<h2 style="font-family:'raleway',sans-serif; font-weight:100"><i class="fa fa-lock" style="margin-right:8px; color:gray"></i>Log In</h2>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs">
    <%= f.input :email, required: false, autofocus: true %>
    <%= f.input :password, required: false %>
    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Log in" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>
</div>
