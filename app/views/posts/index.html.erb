

<div class='jumbotron' data-stellar-background-ratio="0.5" style="padding-top:50px; padding-bottom:50px;height:auto; background: url('/assets/slide_2.jpeg'); background-attachment:fixed;">
  
    <div class="container">
      <p id="notice"><%= notice %></p>
      <image style="width:130px; margin-left:auto; margin-right:auto;"class="img img-responsive" src="/assets/postcardcologofix.png"></image>
      <h1 class=" text-center" style="color:white;font-family:'montserrat', sans-serif;">Our Cards</h1>
      <p class="text-center" style="font-family:'raleway', sans-serif; color:white; font-weight:100">All Of Our Cards. Contributed by Our Artists</p>
    </div>
  
</div>

<div class="container">
  <h1 style="font-family:'montserrat', sans-serif">Recently Added</h1>
  <h6 class="text-muted">There are currently  <b><%= @user.count %></b> active users and <b><%= @posts.count %></b> Card Uploads.</h6>



<% @posts.each_slice(4) do |array_of_3_items|%>
  <div class="row">
    
      <% array_of_3_items.each do |post|%>
      <div class="col-md-3">
        <div class="panel panel-default">
          <div class="panel-heading">
            <b><%= post.title.titleize %></b>
            <br>
            <span class="text-muted" style="font-family:'Montserrat', sans-serif; font-size:10px;"><i class="fa fa-user" style="color:#27E1CE;"></i><%= post.user.email %> <span class="fa fa-clock-o" style="color:#27E1CE;"></span><span><%= post.created_at %></span></span>
          </div>
          <div class="panel-body">
            <%= image_tag post.postcardimg.url(:medium), :class => 'img img-responsive' %>
            <p><%= truncate(post.description) %></p>
            <a><%= link_to 'Show More<i class="fa fa-arrow-right"></i>'.html_safe , post , :class => 'btn btn-primary btn-outline with-arrow btn-sm' %></a>
          </div>
          
        </div>
      
    </div>
    <% end %>
  </div>
<% end %>

    <h2>Traveler's</h2>
    
    <h2>Mother's Day</h2>
    <h2>Christmas Cards</h2>
    <h2>Veterans Day</h2>
    <tbody>
      <% @posts.each do |post| %>
        <tr>
          <td><%= post.title %></td>
          <td><%= post.description %></td>
          <td><%= link_to 'Show', post %></td>
          <td><%= link_to 'Edit', edit_post_path(post) %></td>
          <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Post<i class="fa fa-arrow-right"></i>'.html_safe, new_post_path, :class => 'btn btn-primary btn-outline with-arrow' %>


</div>

<script>
  $.stellar();
</script>
